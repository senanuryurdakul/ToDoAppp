@model List<ToDoApp.Models.TodoItem>

<h2>Görev Listesi</h2>

<form asp-action="Add" method="post">
    <input type="text" name="title" placeholder="Yeni görev girin" required />
    <button type="submit">Ekle</button>
</form>

@if (Model.Count == 0)
{
    <p>Henüz bir görev eklenmedi.</p>
}
else
{
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @item.Title
                <a asp-action="Delete" asp-route-id="@item.Id" style="color:red; text-decoration:none; margin-left:10px;">❌</a>
            </li>
        }
    </ul>
}
